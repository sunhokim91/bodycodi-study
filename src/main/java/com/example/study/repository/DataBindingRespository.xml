<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.study.repository.DataBindingRepository">

    <select id="saveUserBindingProcess" parameterType="com.example.study.domain.User">
        INSERT INTO USER
        (
         name,
         mobile
        )
        VALUES
        (
         #{name},
         #{mobile}
        )
    </select>

    <select id="saveUserNotBindingProcess" parameterType="com.example.study.domain.User">
        INSERT INTO USER
        (
         name,
         mobile
        )
        VALUES
        (
         ${name},
         ${mobile}
        )
    </select>

</mapper>
